{
  "name": "vktag",
  "version": "0.1.0",
  "bin": {
    "vktag": "./bin/cli.js"
  },
  "license": "UNLICENSED",
  "scripts": {
    "dev": "ts-node ./bin/cli",
    "pretty": "prettier --config .prettierrc --check 'src/**/*.{js,ts}'",
    "lint": "eslint --ext .js,.ts src",
    "build": "tsc -p .",
